<%- include('../shared/header', { title: 'Edit Recipe' }) %>

<form action="/edit/<%= recipe.id %>" method="post">
    <input type="hidden" name="id" value="<%= recipe.id %>">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" value="<%= recipe.name %>" required><br>
    <label for="ingredients">Ingredients (comma separated):</label>
    <input type="text" id="ingredients" name="ingredients" value="<%= recipe.ingredients.join(',') %>" required><br>
    <label for="instructions">Instructions:</label>
    <textarea id="instructions" name="instructions" required><%= recipe.instructions %></textarea><br>
    <label for="prepTime">Preparation Time (in minutes):</label>
    <input type="number" id="prepTime" name="prepTime" value="<%= recipe.prepTime %>"><br>
    <button type="submit">Update Recipe</button>
</form>
