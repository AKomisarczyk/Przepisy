<%- include('../shared/header', { title: 'Dodaj Przepis' }) %>

<div class="container">
    <h2>Dodaj nowy przepis</h2>
    <form action="/add" method="post">
        <label for="name">Nazwa:</label>
        <input type="text" id="name" name="name" required><br>
        <label for="ingredients">Sk≈Çadniki (oddzielone przecinkami):</label>
        <input type="text" id="ingredients" name="ingredients" required><br>
        <label for="instructions">Instrukcje:</label>
        <textarea id="instructions" name="instructions" required></textarea><br>
        <label for="prepTime">Czas przygotowania (w minutach):</label>
        <input type="number" id="prepTime" name="prepTime"><br>
        <button type="submit">Dodaj przepis</button>
    </form>
</div>
